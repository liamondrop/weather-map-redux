{
  "name": "weather-map-redux",
  "version": "0.0.1",
  "description": "Weather Map Redux",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/liamondrop/weather-map-redux.git"
  },
  "engines": {
    "node": "5.0.0"
  },
  "scripts": {
    "prestart": "npm run sass",
    "start": "nf start --wrap",
    "startprod": "npm run build && NODE_ENV=production node ./server",
    "build": "npm run js && npm run views && npm run sass && npm run postcss",
    "js": "webpack --progress --colors --config webpack.config.prod.js",
    "views": "babel ./src --out-dir ./views",
    "sass": "node-sass --precision 8 ./styles/scss/styles.scss --output ./public/assets/ --output-style compressed",
    "postcss": "postcss --use autoprefixer ./public/assets/styles.css --replace",
    "eslintsrc": "eslint src/**",
    "eslintsrv": "eslint server/**"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "ecmaFeatures": {
      "modules": true
    },
    "rules": {
      "comma-dangle": [
        2,
        "never"
      ],
      "key-spacing": 0,
      "no-var": 0,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "prefer-const": 0,
      "space-infix-ops": 0,
      "react/prop-types": 1
    }
  },
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "compression": "^1.6.0",
    "express": "^4.13.3",
    "google-maps": "^3.1.0",
    "local-links": "^1.4.0",
    "morgan": "^1.6.1",
    "qs": "^6.0.1",
    "react": "^0.14.2",
    "react-dom": "^0.14.2",
    "react-redux": "^4.0.6",
    "redux": "^3.0.5",
    "redux-logger": "^2.3.1",
    "redux-thunk": "^1.0.3",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "autoprefixer": "^6.2.1",
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "css-loader": "^0.23.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^2.1.1",
    "eslint-plugin-react": "^3.12.0",
    "foreman": "^1.4.1",
    "node-sass": "^3.4.2",
    "nodemon": "^1.8.1",
    "postcss-cli": "^2.3.2",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "uglify-js": "^2.6.0",
    "webpack": "^1.12.9",
    "webpack-dev-middleware": "^1.4.0",
    "webpack-hot-middleware": "^2.6.0"
  }
}
